<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>shopServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.shopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dodajUKosaricuServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.dodajUKosaricuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>kosaricaServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.kosaricaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registracijaServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.registracijaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prijavaServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.prijavaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>odjavaServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.odjavaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placanjeServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.placanjeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>narudzbaIzvrsenaServlet</servlet-name>
        <servlet-class>hr.ivor.servlet.narudzbaIzvrsenaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shopServlet</servlet-name>
        <url-pattern>/shopServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dodajUKosaricuServlet</servlet-name>
        <url-pattern>/dodajUKosaricuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>kosaricaServlet</servlet-name>
        <url-pattern>/kosaricaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registracijaServlet</servlet-name>
        <url-pattern>/registracijaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prijavaServlet</servlet-name>
        <url-pattern>/prijavaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>odjavaServlet</servlet-name>
        <url-pattern>/odjavaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placanjeServlet</servlet-name>
        <url-pattern>/placanjeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>narudzbaIzvrsenaServlet</servlet-name>
        <url-pattern>/narudzbaIzvrsenaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
